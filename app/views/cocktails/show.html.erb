<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %> <%= dose.description %>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail)  %>
  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
